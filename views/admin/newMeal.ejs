<%- include('../layout', { body: '' }) %>
<section class="card">
  <h2>New Meal</h2>
  <form method="POST" action="/meals/new">
    <label>Name</label><input name="name" required />
    <label>Calories</label><input name="calories" type="number" />
    <label>Protein</label><input name="protein" type="number" step="0.1" />
    <label>Carbs</label><input name="carbs" type="number" step="0.1" />
    <label>Fat</label><input name="fat" type="number" step="0.1" />
    <label>Allergens</label><input name="allergens" />
    <label>Tags</label><input name="tags" />
    <button>Create</button>
  </form>
</section>
